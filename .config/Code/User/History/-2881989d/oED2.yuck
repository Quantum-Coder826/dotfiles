(defwidget cpu [core]
    (box :class "stat_cpu"
         :space-evenly true
        core))

(defwindow example
           :monitor 0
           :geometry (geometry :x "-150px"
                               :y "170px"
                               :width "300px"
                               :height "30px"
                               :anchor "top right")
           :stacking "bg"
           :windowtype "dock"
           :wm-ignore false
    (centerbox
        (cpu :core 0)))