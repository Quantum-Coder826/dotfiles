{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo Build",
            "type": "shell",
            "command": "cargo build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "upload binary",
            "type": "shell",
            "command": "scp -i ~/.ssh/ev3dev ${workspaceFolder}/target/armv5te-unknown-linux-musleabi/debug/${workspaceFolderBasename} robot@ev3dev.local:/home/robot/${workspaceFolderBasename}/",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["Cargo Build", "upload binary"]
        }
    ],
    "problemMatcher": [
        {
            "owner": "QByte",
            "source": "QByte",
            "pattern": [
                {
                    "code": 1,
                    "column": 0,
                    "file": 1,
                    "line": 4,
                    "message": 5,
                    "regexp": "(ssh):(.+):(.+)$"
                }
            ]
        }
    ]
}